#include <iostream>

int main() {
    // Получаем от пользователя три вещественных числа
    double A, B, C;
    std::cout << "Введите три вещественных числа: ";
    std::cin >> A >> B >> C;

    // Проверяем, упорядочены ли числа по возрастанию
    if (A < B && B < C) {
        // Если упорядочены, удваиваем их значения
        A *= 2;
        B *= 2;
        C *= 2;
    } else {
        // Иначе заменяем значения на противоположные
        A = -A;
        B = -B;
        C = -C;
    }

    // Выводим результат
    std::cout << "Результат: A = " << A << ", B = " << B << ", C = " << C << std::endl;

    return 0;
}
