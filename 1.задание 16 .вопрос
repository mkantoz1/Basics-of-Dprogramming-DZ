#include <iostream>

int main() {
    // Введите количество компота в килограммах
    double P;
    std::cout << "Введите количество компота в килограммах: ";
    std::cin >> P;

    // Заданные пропорции
    const double отношениеСахар = 1.0;
    const double отношениеПерсики = 1.0;
    const double отношениеВода = 3.0;

    // Используя пропорции, вычисляем количество каждого ингредиента
    double количествоСахара = P * (отношениеСахар / (отношениеСахар + отношениеПерсики + отношениеВода));
    double количествоПерсиков = P * (отношениеПерсики / (отношениеСахар + отношениеПерсики + отношениеВода));
    double количествоВоды = P * (отношениеВода / (отношениеСахар + отношениеПерсики + отношениеВода));

    // Выводим результаты на экран
    std::cout << "Необходимое количество ингредиентов:\n";
    std::cout << "Сахар: " << количествоСахара << " килограмм\n";
    std::cout << "Персики: " << количествоПерсиков << " килограмм\n";
    std::cout << "Вода: " << количествоВоды << " килограмм\n";

    return 0;
}
