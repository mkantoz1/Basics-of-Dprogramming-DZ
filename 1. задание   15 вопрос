#include <iostream>

int main() {
    // Количество капусты в килограммах
    double M;
    std::cout << "Введите количество капусты в килограммах: ";
    std::cin >> M;

    // Константы для расчета
    const double сольНаКапусту = 225.0 / 10.0;    // Количество соли на 10 кг капусты
    const double морковьНаКапусту = 350.0 / 10.0;   // Количество моркови на 10 кг капусты
    const double клюкваНаКапусту = 200.0 / 10.0;  // Количество клюквы на 10 кг капусты
    const double лавровыйЛистНаКапусту = 4.0 / 10.0; // Количество лаврового листа на 10 кг капусты

    // Рассчитываем количество каждого ингредиента на основе введенного количества капусты
    double сольНаКапустуКоличество = M * сольНаКапусту;
    double морковьНаКапустуКоличество = M * морковьНаКапусту;
    double клюкваНаКапустуКоличество = M * клюкваНаКапусту;
    double лавровыйЛистНаКапустуКоличество = M * лавровыйЛистНаКапусту;

    // Выводим результаты на экран
    std::cout << "Необходимое количество ингредиентов:\n";
    std::cout << "Соль: " << сольНаКапустуКоличество << " грамм\n";
    std::cout << "Морковь: " << морковьНаКапустуКоличество << " грамм\n";
    std::cout << "Клюква: " << клюкваНаКапустуКоличество << " грамм\n";
    std::cout << "Лавровый лист: " << лавровыйЛистНаКапустуКоличество << " штук\n";

    return 0;
}
